<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="12dp"
    android:background="#fdfdfb"
    tools:context="com.example.yc.lab7.MainActivity">

    <ImageView
        android:id="@+id/img"
        android:src="@mipmap/img"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp"/>
    <EditText
        android:id="@+id/NewPassword"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="New Password"
        android:inputType="numberPassword"
        app:layout_constraintTop_toBottomOf="@+id/img"/>
    <EditText
        android:id="@+id/ConfirmPassword"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Confirm Password"
        android:inputType="numberPassword"
        app:layout_constraintTop_toBottomOf="@+id/NewPassword"/>
    <View
        android:id="@+id/boundary"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <Button
        android:id="@+id/ok"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="OK"
        android:textColor="#B3B3B1"
        android:background="@drawable/shape"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/boundary"
        app:layout_constraintTop_toBottomOf="@+id/ConfirmPassword"
        android:layout_marginTop="10dp"/>
    <Button
        android:id="@+id/clear"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="CLEAR"
        android:textColor="#B3B3B1"
        android:background="@drawable/shape"
        app:layout_constraintLeft_toLeftOf="@id/boundary"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ConfirmPassword"
        android:layout_marginTop="10dp"/>


</android.support.constraint.ConstraintLayout>
